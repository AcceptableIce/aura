<aura:component extensible="true" extends="ui:menuTrigger" description="This component creates a link as a dropdown menu trigger." support="GA">
    <aura:attribute name="title" type="String" default="" description="The text to display as a tooltip when the mouse pointer hovers over this component."/>
    <aura:renderif isTrue="{!v.body.length == 0}">
        <a aura:id="link" class="{!v.class}" title="{!v.title}">{!v.label}</a>
        <aura:set attribute="else">
            {!v.body}
        </aura:set>
    </aura:renderif>
</aura:component>