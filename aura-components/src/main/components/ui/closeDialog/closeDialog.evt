<aura:event type="APPLICATION" description="Event fired to close a dialog window. Handled by ui:dialogManager.">
    <aura:attribute name="dialog" type="Aura.Component" description="The dialog that should be closed."/>
    <aura:attribute name="triggerEvent" type="Aura.Action" description="The aura event that triggered this event. If the trigger is a ui:press event, always pass it in here. Optional otherwise."/>
    <aura:attribute name="confirmClicked" type="Boolean" description="This property is 'true' if the confirmation button in the alert window was clicked, 'false' otherwise."/>
</aura:event>