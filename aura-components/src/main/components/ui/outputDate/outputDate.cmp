<aura:component extends="ui:output" implements="ui:outputDateComponent" extensible="true" model="java://org.auraframework.component.ui.OutputDateModel" support="GA" description="Displays a date in the default or specified format based on the user's locale.">
    <!-- If you bind the "value" attribute to an Apex model Date value then the Date's timezone will be used by default.
         You can specify a literal value which must be long value representing milliseconds since Jan 1 1970. -->
    <aura:attribute name="value" type="Date" required="true" description="The output value of the date. A literal value (long) can be used to represent milliseconds since Jan 1, 1970."/>
    <span aura:id='span' class="{!v.class}">{!m.text}</span>
</aura:component>
