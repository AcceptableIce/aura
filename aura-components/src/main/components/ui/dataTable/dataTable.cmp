<aura:component implements="ui:listInterface"  model="java://org.auraframework.component.ui.DataTableModel" extensible="true" support="PROTO" description="A table that displays an item of data per row, which is defined by iterating over the set of data. &lt;ui:dataTable&gt; can be used inside a &lt;aura:forEach&gt; tag that specifies the collection of data to be iterated over. The body of &lt;ui:dataTable&gt; contains one or more &lt;ui:dataTableRow&gt; components.">
    <aura:attribute name="class" type="String" default="" description="The CSS style used to display the table."/>
    <aura:attribute name="noDataText" type="String" default="No data found." description="The text to display when no data is found. Default value is &#8220;No data found.&#8221;"/>
    <aura:attribute name="headerValues" type="String[]" description="The text that appears in the header row of the table."/>
    <aura:attribute name="striped" type="Boolean" default="false" description="Specifies whether or not the rows should be striped.  Defaults to 'false'."/>
    
    <aura:attribute name="itemTemplate" type="Aura.ComponentDefRef[]">
    	<!-- THIS DOESN'T WORK YET, BUT SOMETHING SIMILAR IS THE IDEAL GOAL -->
    	<ui:dataTableRow>
    		<aura:iteration items="{!v.headerValues}" var="header">
		        <ui:dataTableColumn>
		            {!header}
		        </ui:dataTableColumn>
	        </aura:iteration>
	    </ui:dataTableRow>
    </aura:attribute>

    <aura:if isTrue="{!v.items.length > 0}">
        <div>
            <table class="{!(v.striped == 'true' ?'striped ':'')+v.class}" cellpadding="0" cellspacing="0" aura:id="table">
                <thead><tr aura:id="header"/></thead>

                <!-- DCHASMAN For now (will be fixed once aura:public/forEach over dynamic content is fixed) body must be of the form:
                <aura:foreach items="{!items}" var="varname">
                    <ui:dataTableRow>
                        <ui:dataTableColumn headerValue="someHeaderValue">
                            *** anything you want in here ***
                        <ui:dataTableColumn>
                    </ui:dataTableRow>
                </aura:foreach> -->
                <tbody>
                	<ui:list items="{!v.items}" itemVar="{!v.itemVar}" itemTemplate="{!m.itemTemplate}"/>
                </tbody>

            </table>
        </div>
        <aura:set attribute="else">
             <ui:message severity="info">{!v.noDataText}</ui:message>
        </aura:set>
    </aura:if>

</aura:component>
