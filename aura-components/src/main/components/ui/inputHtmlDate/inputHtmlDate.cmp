<aura:component extends="ui:input" implements="ui:inputDateComponent" extensible="true" support="BETA" description="A HTML5 input date field for entering a date.">
    <aura:attribute name="value" type="String" description="The input value of the date which must be in an ISO8601 format, that is, yyyy-MM-dd."/>
    <aura:set attribute="updateOn" value="blur"/>
    <input type="date" value="{!v.value}" class="{!v.class}" max="{!v.max}" min="{!v.min}" step="{!v.step}" required="{!v.required}" disabled="{!v.disabled}"/> 
</aura:component>