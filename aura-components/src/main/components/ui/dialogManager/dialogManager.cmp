<aura:component extensible="true" support="GA" description="Manages all instances of ui:dialog in an application, by handling visibility and all DOM events. One (and only one) instance of this component is required if you wish to use the ui:dialog component.">

    <aura:attribute name="allowMultipleActiveDialogs" type="Boolean" default="{!false}" description="Determines whether multiple active (i.e., open) dialogs are allowed. There are almost no use cases where this should be set to {!true}, but, it's an option anyway. Note that this setting only applies to non-modal dialogs. If a modal dialog is active, all other dialogs will be deactivated."/>

    <!-- TODO: how do we handle ui:dialog instances that are created dynamically, after the ui:dialogManagerReady event is fired? -->

    <!-- private attributes -->
    <aura:attribute name="_activeDialogs" type="Aura.Component[]" description="PRIVATE ATTRIBUTE - DO NOT SET MANUALLY. The currently active (i.e. open) ui:dialog components."/>
    <aura:attribute name="_dialogs" type="Aura.Component[]" description="PRIVATE ATTRIBUTE - DO NOT SET MANUALLY. Array of dialog components managed by this manager."/>
    <aura:attribute name="_ready" type="Boolean" default="{!false}" description="PRIVATE ATTRIBUTE - DO NOT SET MANUALLY. Specifies whether the dialogManager has been initialized."/>

    <!-- events -->
    <aura:registerEvent name="ready" type="ui:dialogManagerReady"/>
    <aura:registerEvent name="close" type="ui:closeDialog"/>
    <aura:handler event="ui:openDialog" action="{!c.openDialog}"/>
    <aura:handler event="ui:closeDialog" action="{!c.closeDialog}"/>

</aura:component>
