<aura:component extensible="true" description="A panel manager to handle and stack panels.">
	<aura:attribute name="class" type="String" default="one"></aura:attribute>
    <aura:attribute name="cancelButtonLabel" type="String" default="Cancel" />

	<aura:handler name="init" value="{!this}" action="{!c.init}"/>
	<aura:handler event="ui:openPanel" action="{!c.openPanel}"></aura:handler>
	<aura:handler event="ui:closePanel" action="{!c.closePanel}"></aura:handler>
	<aura:handler event="ui:updatePanel" action="{!c.updatePanel}"></aura:handler>
	<aura:handler event="ui:panelTransitionBegin" action="{!c._onPanelTransitionBegin}"></aura:handler>
	<aura:handler event="ui:panelTransitionEnd" action="{!c._onPanelTransitionEnd}"></aura:handler>
	<aura:handler event="ui:panelDestroy" action="{!c.destroyAllPanels}"></aura:handler>
	<aura:handler event="ui:createSlidePanel" action="{!c.createSlidePanel}"></aura:handler>
	<aura:handler event="ui:destroySlidePanel" action="{!c.destroySlidePanel}"></aura:handler>

	<aura:dependency resource="markup://ui:panelOverlay" />
	<aura:dependency resource="markup://ui:modalOverlay" />
	<aura:dependency resource="markup://ui:panelSlider" />
	<aura:dependency resource="markup://ui:hidePanel" type="EVENT" />
	
	<div aura:id="container" class="{! 'dialog-wrapper ' + $Browser.formFactor}">
	</div>

</aura:component>