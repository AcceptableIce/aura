<aura:component extensible="true" description="A panel manager to handle and stack panels.">
	<aura:attribute name="class" type="String" default="one"></aura:attribute>
    <aura:attribute name="cancelButtonLabel" type="String" default="Cancel" description="The label on the Cancel button on an overlay panel. The default label is 'Cancel'." />

	<aura:handler name="init" value="{!this}" action="{!c.init}"/>
	<aura:handler name="openPanel" event="ui:openPanel" action="{!c.openPanel}" description="The event fired when a panel is opened."></aura:handler>
	<aura:handler name="closePanel" event="ui:closePanel" action="{!c.closePanel}" description="The event fired when a panel is closed."></aura:handler>
	<aura:handler name="updatePanel" event="ui:updatePanel" action="{!c.updatePanel}" description="The event fired when a panel is updated."></aura:handler>
	<aura:handler name="panelTransitionBegin" event="ui:panelTransitionBegin" action="{!c._onPanelTransitionBegin}" description="The event fired when a panel transition is started."></aura:handler>
	<aura:handler name="panelTransitionEnd" event="ui:panelTransitionEnd" action="{!c._onPanelTransitionEnd}" description="The event fired when a panel transition is ended."></aura:handler>
	<aura:handler name="panelDestroy" event="ui:panelDestroy" action="{!c.destroyAllPanels}" description="The event fired when all panels are destroyed from the DOM."></aura:handler>
	<aura:handler name="createSlidePanel" event="ui:createSlidePanel" action="{!c.createSlidePanel}" description="The event fired when a slider panel is created. "></aura:handler>
	<aura:handler name="destroySlidePanel" event="ui:destroySlidePanel" action="{!c.destroySlidePanel}" description="The event fired when a slider panel is destroyed."></aura:handler>

	<aura:dependency resource="markup://ui:panelOverlay" />
	<aura:dependency resource="markup://ui:modalOverlay" />
	<aura:dependency resource="markup://ui:panelSlider" />
	<aura:dependency resource="markup://ui:hidePanel" type="EVENT" />
	
	<div aura:id="container" class="{! 'dialog-wrapper ' + $Browser.formFactor}">
	</div>

</aura:component>