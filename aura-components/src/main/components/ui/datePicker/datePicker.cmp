<aura:component extensible="true" implements="ui:visible" model="java://org.auraframework.component.ui.DatePickerModel">
    <aura:attribute name="value" type="Date" description="A date corresponding to a calendar day in the format yyyy-mm-dd."/>
    <aura:attribute name="visible" type="Boolean" default="false"/>
    <aura:registerevent name="selectDate" type="ui:selectDate"/>
    <div aura:id="datePicker" class="{!v.class + (v.visible == true ? ' visible' : '')}">
        <div class="dateBar">
            <div class="prevLinks">
                <a aura:id="prevYear" class="navLink prevYear" title="Go to previous year" onclick="{!c.goToPrevYear}" tabindex="-1"/>
                <a aura:id="prevMonth" class="navLink prevMonth" title="Go to previous month" onclick="{!c.goToPrevMonth}" tabindex="-1"/>
            </div>
            <div class="nextLinks">
                <a aura:id="nextMonth" class="navLink nextMonth" title="Go to next month" onclick="{!c.goToNextMonth}" tabindex="-1"/>
                <a aura:id="nextYear" class="navLink nextYear" title="Go to next year" onclick="{!c.goToNextYear}" tabindex="-1"/>
            </div>
            <h4 class="monthYear" aura:id="calTitle"/>
        </div>
        <ui:datePickerGrid aura:id="grid" weekDays="{!m.weekdayLabels}" hide="{!c.hide}" selectDate="{!c.selectDate}" updateCalendarTitle="{!c.updateCalendarTitle}"/>
        <div class="buttonBar">
            <a aura:id="today" onclick="{!c.selectToday}" onkeydown="{!c.handleTabToday}" class="calToday" href="javascript:void(0);" tabindex="2">Today</a>
        </div>
    </div>
</aura:component>