<aura:component extends="ui:input" implements="ui:inputDateComponent" extensible="true" support="BETA" description="A HTML5 input datetime field for entering a date and time.">
    <aura:attribute name="value" type="String" description="The input value of the date time as specified by an ISO8601 format."/>
    <aura:set attribute="updateOn" value="blur"/>
    <input type="datetime" value="{!v.value}" class="{!v.class}" max="{!v.max}" min="{!v.min}" step="{!v.step}" required="{!v.required}" disabled="{!v.disabled}"/>
</aura:component>