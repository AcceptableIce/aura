<aura:component extends="ui:dropzone">
	
	<aura:attribute name="class" type="String"/>
	<aura:attribute name="prefix" type="String" default="Acme"/>
	<aura:attribute name="count" type="Integer" default="5"/>
	<aura:attribute name="draggableContext" type="Object"/>
	
	<aura:set attribute="context" value="list" />
	
	<aura:handler name="init" value="{!this}" action="{!c.init}"/>
	<aura:handler name="drop" action="{!c.handleDrop}"/>
	
	<ui:infinitelist aura:id="list" itemVar="item">
		<aura:set attribute="dataProvider">
			<uiExamples:dragAndDropProvider prefix="{!v.prefix}" count="{!v.count}"/>
		</aura:set>
		<aura:set attribute="itemTemplate">
			<ui:draggable context="{!v.draggableContext}" dragEnd="{!c.handleDragEnd}" dataTransfer="{!item}">
				<div class="sampleCard">
					<p>{!item}</p>
				</div>
			</ui:draggable>
		</aura:set>
	</ui:infinitelist>
	
</aura:component>