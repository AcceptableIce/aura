<aura:component>
  <aura:attribute name="parentName" type="String"/>
  <aura:registerevent name="componentEventFired" type="auradocs:compEvent"/>

  <div>
    <h3>This is {!v.parentName}'s eventsNotifier.cmp instance</h3>
    <p><button onclick="{!c.fireComponentEvent}">Click here to fire a component event</button></p>
    <p><button onclick="{!c.fireApplicationEvent}">Click here to fire an application event</button></p>
  </div>
</aura:component>
