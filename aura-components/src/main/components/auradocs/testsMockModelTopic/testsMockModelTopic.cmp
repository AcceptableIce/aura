    mocks : [{
        type : "MODEL",
        stubs : [{
            answers : [{
                error : "org.auraframework.throwable.AuraRuntimeException"
            }]
        }]                   
    }],
    test : function(cmp) {
        // test code goes here
    }
},
</auradocs:codeblock>

