<auradocs:codeblock>
testModelProperties : {
    mocks : [{
        type : "MODEL",
        stubs : [{
            answers : [{
                value : {
                    secret : { value : "&lt;not available&gt;" } ,
                    integer : { value : 1 },
                    stringList : { value : [ "early", "on", "time", "late"] }
                }
            }]
        }]                   
    }],
    test : function(cmp) {
        // test code goes here
    }
},
</auradocs:codeblock>

    <br/>
