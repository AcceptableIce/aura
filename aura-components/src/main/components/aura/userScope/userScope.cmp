<aura:component support="GA" access="GLOBAL" 
    renderer="java://org.auraframework.renderer.UserScopeRenderer"
    description="This component delineates a subtree with restricted access.  In
       particular, it separates the template with its need for unescaped script
       tags and other 'priviledged' things from the user components denied such
       XSS liberties">

    <aura:attribute name="body" type="Aura.Component[]" description="The wrapped
       component body, with restricted privileges"/>

    {!v.body}

</aura:component>
