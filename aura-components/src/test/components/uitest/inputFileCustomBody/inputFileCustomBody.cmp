<aura:component extends="ui:inputFileInnerContent">

    <!-- Make a custom Droppable zone  -->
    <ui:inputFileDroppableZone multiple="{!v.multiple}" accept="{!v.accept}" maxSizeAllowed="{!v.maxSizeAllowed}"
                               disabled="{!v.disabled}" class="{!v.class}" classOver="{!v.classOver}"
                               aura:id="dropZone">
        Hey Drag and Drop files here too ! Kebola !
    </ui:inputFileDroppableZone>

    <!-- Make a custom browse button every thing inside this wrap become clickable and open a browse dialog  -->
    <ui:inputFileOpenBrowse accept="{! v.accept }" multiple="{! v.multiple }">
        <ui:button label="Browse into your files too !" />
        Accept : {! v.accept }
    </ui:inputFileOpenBrowse>

    <!-- Make custom list of files  -->
    <h1 class="input-file-header">List of selected files</h1>
    <aura:if isTrue="{! v.filesArr.length == 0 }">
        Anything selected yet !
    </aura:if>
    <ul class="input-file-list">
        <aura:iteration items="{! v.filesArr }" var="file" >
            <li class="input-file-file">
                {! file.name }
                <span class="input-file-file-size">
                &#40;<ui:outputNumber value="{! file.size / 2014 }" format="#,###.00" /> Kb&#41;
                </span>
            </li>
        </aura:iteration>
    </ul>
</aura:component>