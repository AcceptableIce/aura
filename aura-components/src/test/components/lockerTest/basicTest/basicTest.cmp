<aura:component implements="aura:requireLocker">
    <aura:attribute name="log" type="Object" description="Store info from helper to verify in test"/>

    <div>LockerService test</div>
    <ui:button label="Test Wrappers" press="{!c.testWrappers}" aura:id="testWrappers"/>
    <aura:method name="getWrappersFromController" action="{!c.getWrappersFromController}"/>
    <aura:method name="getSecureElementFromMarkup" action="{!c.getSecureElementFromMarkup}"/>
    <aura:method name="appendDiv" action="{!c.appendDiv}"/>
    <aura:method name="createScriptTags" action="{!c.createScriptTags}"/>
    <aura:method name="testSymbol" action="{!c.testSymbol}">
	    <aura:attribute name="symbol" type="String"/>
    </aura:method>

    <div aura:id="content"/>
</aura:component>