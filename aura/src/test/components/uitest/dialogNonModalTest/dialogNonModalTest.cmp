<aura:component>
    <ui:dialogManager/>
    <aura:handler event="ui:closeDialog" action="{!c.closeDialog}"/>
    <ui:inputText aura:id="resultLabel" class="resultLabel" value=""/>
    <ui:button aura:id="1" class="launchDialogButton" label="Click for Non-Modal!" press="{!c.openDialog}" />
    <ui:dialog aura:id="dialogBoxId" title="BOOM!" description="Testing Non ModalDialog Box">
        <aura:set attribute="buttons">
           <ui:dialogButtons defaultButtons="both"/>
        </aura:set>
        <span class="menuItem">
             <ui:inputCheckbox aura:id="checkbox" name ="Pudding"        value="false"/>Pudding
             <ui:inputCheckbox aura:id="checkbox" name ="Puppies"        value="false"/>Puppies
             <ui:inputCheckbox aura:id="checkbox" name ="Bananas"        value="false"/>Bananas       
             <ui:inputCheckbox aura:id="checkbox" name ="Owls"           value="false"/>Owls       
             <ui:inputCheckbox aura:id="checkbox" name ="Cheese"         value="false"/>Cheese         
             <ui:inputCheckbox aura:id="checkbox" name ="Koala"          value="false"/>Koala      
             <ui:inputCheckbox aura:id="checkbox" name ="Water Bottles"  value="false"/>Water Bottles         
             <ui:inputCheckbox aura:id="checkbox" name ="Coffee"         value="false"/>Coffee       
             <ui:inputCheckbox aura:id="checkbox" name ="Computers"      value="false"/>Computers         
             <ui:inputCheckbox aura:id="checkbox" name ="Nerds"          value="false"/>Nerds
        </span>
    </ui:dialog> 
</aura:component>
