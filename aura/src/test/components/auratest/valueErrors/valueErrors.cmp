<aura:component render="client" model="java://org.auraframework.impl.java.model.ValueChangeModel">
	<aura:attribute name="obj" type="Object"/>
	<aura:attribute name="map" type="Map" default="{'trunk':{'branch':{'leaf':'green'}}}"/>
	<aura:attribute name="action" type="Aura.Action"/>
	
	<div aura:id="children">
	    <div aura:id="log"/>
		<auratest:valueErrorsMember aura:id="simple" obj="a simple value"/>
		<auratest:valueErrorsMember aura:id="view" obj="{!v.obj}"/>
		<auratest:valueErrorsMember aura:id="model" obj="{!m.map}"/>
		<auratest:valueErrorsMember aura:id="function" obj="{!v.obj ? v.obj : v.cmp}"/>
		<auratest:valueErrorsMember aura:id="iterations">
			<aura:set attribute="obj">
				<aura:iteration items="{!v.list}" var="i">
					<auratest:valueErrorsMember aura:id="iterated" obj="{!i}"/>
				</aura:iteration>
			</aura:set>
		</auratest:valueErrorsMember>
    </div>
</aura:component>
